{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "theme",
          "utility",
          "variants",
          "tailwind",
          "apply",
          "layer",
          "config",
          "plugin",
          "custom-variant"
        ]
      }
    ],
    "import-notation": "string"
  }
}
